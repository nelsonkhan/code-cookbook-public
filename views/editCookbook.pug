extends layout

block content
  section.section
    .container
      h1= title
      if title
        hr
        .card
          .card-content
            form(action=`/cookbook/edit/${data.slug || ''}` method="POST")
              .field
                label.label Title
                p.control
                input.input(value=data.title name="title")
              .field
                p.control
                input.button.is-info(type="submit" value="Save") 