mixin recipeForm(data = {})
  .card
    .card-content
      form(action=`/recipe/edit/${data.slug || ''}` method="POST")
        .field
          label.label Title
          p.control
            input.input(value=data.title name="title")
        .field
          label.label Content
          p.control
            textarea.textarea(name="content")= data.content
        .field
          p.control
            input.button.is-info(type="submit" value="Save") 